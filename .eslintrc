// Adapted from: https://github.com/airbnb/javascript/blob/master/linters/eslintrc

env:
  browser: true
  node: true

ecmaFeatures:
  jsx: true

rules:
  block-scoped-var: 2
  brace-style: 2
  camelcase: 2
  comma-dangle: [2, "never"]
  comma-style: 2
  consistent-this: [1, "_this"]
  dot-notation: 2
  eqeqeq: 2
  eol-last: 2
  func-names: 2
  key-spacing: 2
  indent: [2, 2]
  new-cap: 2
  no-array-constructor: 2
  no-dupe-keys: 2
  no-eq-null: 2
  no-extra-boolean-cast: 2
  no-multi-spaces: 2
  no-multi-str: 2
  no-new-object: 2
  no-reserved-keys: 2
  no-shadow-restricted-names: 2
  no-spaced-func: 2
  no-unused-vars: 2
  no-wrap-func: 2
  one-var: [2, "never"]
  padded-blocks: [2, "never"]
  quotes: [2, "single"]
  semi: [2, "always"]
  semi-spacing: 2
  space-before-blocks: 2
  space-before-function-paren: [2, "never"]
  space-infix-ops: 2
  spaced-line-comment: 2
  strict: 2
  use-isnan: 2
  valid-jsdoc: 2
  vars-on-top: 2
